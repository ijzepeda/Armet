<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/browser_actions_bg_grey"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:contentPadding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/deleteProductBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_close_white_18dp" />

        <TextView
            android:id="@+id/itemNameTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="Item Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/itemQtyTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="0"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/editProductBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_edit_white_18dp" />
    </LinearLayout>


</android.support.v7.widget.CardView>