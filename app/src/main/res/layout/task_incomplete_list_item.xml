<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="4.5"
        app:cardBackgroundColor="@android:color/holo_orange_dark"
        app:cardCornerRadius="@dimen/cardview_default_elevation"
        app:contentPadding="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:background="@android:color/transparent"
            android:gravity="fill_vertical|center_horizontal|fill_horizontal|center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#47fdfdfd"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/deleteTaskBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/baseline_close_white_18dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="Tarea Incompleta"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/taskEndTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="22:55"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/editTaskBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/baseline_edit_white_18dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/taskStartTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="22:55"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/grayText" />

            <TextView
                android:id="@+id/taskActionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ellipsize="marquee"
                android:gravity="top"
                android:lines="1"
                android:maxLines="1"
                android:text="Accion"
                android:textAlignment="center"
                android:textColor="@color/grayText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/taskPlaceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Lugar"
                android:textAlignment="center"
                android:textColor="@color/grayText"
                android:textSize="10sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>